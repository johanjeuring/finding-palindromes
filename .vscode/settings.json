{
    "editor.wordWrapColumn": 90,
    "[cabal]": {
        "editor.defaultFormatter": "berberman.vscode-cabal-fmt"
    },
    "[haskell]": {
        "editor.formatOnSave": false,
        "files.eol": "\n"
    },
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".hs",
                "cmd": "fourmolu -i \"${file}\""
            },
        ]
    }
}